<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/base_dimen_13"
    android:paddingBottom="@dimen/base_dimen_13">

    <com.ybkj.syzs.deliver.ui.view.RoundImageView
        android:id="@+id/image_goods"
        android:layout_width="@dimen/base_dimen_80"
        android:layout_height="@dimen/base_dimen_80"
        app:img_radius="@dimen/base_dimen_4" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/auth_common_text3"
        android:layout_alignTop="@+id/image_goods"
        android:layout_marginStart="@dimen/base_dimen_12"
        android:layout_toEndOf="@+id/image_goods"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/base_text_size_14" />

    <TextView
        android:id="@+id/tv_code"
        style="@style/auth_common_text3"
        android:layout_below="@+id/tv_title"
        android:layout_marginStart="@dimen/base_dimen_12"
        android:layout_marginTop="@dimen/base_dimen_9"
        android:layout_toEndOf="@+id/image_goods"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/base_text_size_13" />

    <Button
        android:id="@+id/btn_entry"
        style="@style/auth_common_btn"
        android:layout_width="@dimen/base_dimen_120"
        android:layout_height="@dimen/base_dimen_27"
        android:layout_alignBottom="@+id/image_goods"
        android:layout_marginStart="@dimen/base_dimen_12"
        android:layout_toEndOf="@+id/image_goods"
        android:textSize="@dimen/base_text_size_13" />

    <ImageView
        android:id="@+id/img_order_check"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="17dp"
        android:src="@mipmap/order_no_select"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_title"/>

</RelativeLayout>