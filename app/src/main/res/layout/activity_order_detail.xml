<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/project_base_color_background1"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_index_action_bar"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_50">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="@dimen/base_dimen_50"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@mipmap/back_wight" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="订单详情"
                android:textColor="@color/base_white"
                android:textSize="@dimen/base_text_size_18" />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_head">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_dimen_10"
                android:layout_marginTop="@dimen/base_dimen_10"
                android:layout_marginRight="@dimen/base_dimen_10"
                android:background="@drawable/project_base_white_angle8"
                android:orientation="vertical"
                android:padding="@dimen/base_dimen_15">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/base_dimen_18"
                        android:layout_height="@dimen/base_dimen_22"
                        android:layout_marginRight="@dimen/base_dimen_8"
                        android:src="@mipmap/ic_address_location" />

                    <TextView
                        android:id="@+id/tv_receiver_name"
                        style="@style/auth_common_text3"
                        android:textColor="@color/auth_color_666" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/auth_common_text3"
                    android:layout_marginTop="@dimen/base_text_size_12"
                    android:textColor="@color/auth_color_666"
                    android:textSize="@dimen/base_text_size_14" />
            </LinearLayout>

            <com.ybkj.syzs.deliver.ui.view.recyclerview.XRecyclerView
                android:id="@+id/order_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/base_dimen_10"
                android:background="@drawable/project_base_white_angle8"
                android:paddingLeft="@dimen/base_dimen_15"
                android:paddingRight="@dimen/base_dimen_15" />

            <LinearLayout
                android:id="@+id/layout_express"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_head"
                android:layout_margin="@dimen/base_dimen_10"
                android:background="@drawable/project_base_white_angle8"
                android:orientation="vertical"
                android:padding="@dimen/base_dimen_15"
                android:visibility="gone">

                <TextView
                    style="@style/auth_common_text3"
                    android:text="快递信息" />

                <TextView
                    android:id="@+id/tv_express_name"
                    style="@style/auth_common_text9_small"
                    android:layout_marginTop="@dimen/base_dimen_14" />

                <TextView
                    android:id="@+id/tv_express_n0"
                    style="@style/auth_common_text9_small"
                    android:layout_marginTop="@dimen/base_dimen_4" />

                <TextView
                    android:id="@+id/tv_poster"
                    style="@style/auth_common_text9_small"
                    android:layout_marginTop="@dimen/base_dimen_4" />

                <TextView
                    android:id="@+id/tv_post_time"
                    style="@style/auth_common_text9_small"
                    android:layout_marginTop="@dimen/base_dimen_4" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
