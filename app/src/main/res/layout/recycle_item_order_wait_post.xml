<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/base_dimen_10"
    android:layout_marginEnd="@dimen/base_dimen_10"
    android:background="@drawable/shape_white_angle8"
    android:orientation="vertical"
    android:padding="@dimen/base_dimen_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_order_num"
            style="@style/auth_common_text3"
            android:layout_width="match_parent"
            android:layout_marginEnd="@dimen/base_dimen_15"
            android:layout_toStartOf="@+id/tv_order_status"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_order_status"
            style="@style/auth_common_text3"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/auth_common_text9_small"
            android:layout_below="@+id/tv_order_num"
            android:layout_marginTop="@dimen/base_dimen_6"
            android:layout_marginBottom="@dimen/base_dimen_10" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        style="@style/line_h"
        android:layout_marginTop="@dimen/base_dimen_8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_13"
        android:layout_marginBottom="@dimen/base_dimen_13"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_receiver_name"
            style="@style/auth_common_text9" />

        <TextView
            android:id="@+id/tv_receiver_address"
            style="@style/auth_common_text9"
            android:layout_marginTop="@dimen/base_dimen_8"
            android:lineSpacingExtra="@dimen/base_dimen_6"
            android:textSize="@dimen/base_text_size_14" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_post"
        style="@style/auth_common_btn"
        android:layout_width="@dimen/base_dimen_116"
        android:layout_height="@dimen/base_dimen_36"
        android:layout_gravity="end"
        android:text="@string/good_post" />

</LinearLayout>