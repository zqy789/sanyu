<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_50"
        android:background="@color/base_white">

        <RelativeLayout
            android:id="@+id/layout_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <ImageButton
                android:id="@+id/btn_left"
                android:layout_width="@dimen/base_dimen_50"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:src="@mipmap/head_back_black" />

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minWidth="@dimen/base_dimen_50"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/auth_color_666"
                android:textSize="@dimen/base_text_size_14" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxWidth="@dimen/base_dimen_240"
            android:maxLines="1"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_size_18" />

        <RelativeLayout
            android:id="@+id/layout_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minWidth="@dimen/base_dimen_50"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:textColor="@color/auth_color_666"
                android:textSize="@dimen/base_text_size_14" />

            <ImageButton
                android:id="@+id/btn_right"
                android:layout_width="@dimen/base_dimen_50"
                android:layout_height="match_parent"
                android:background="@null"
                android:visibility="gone" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/bottom_line"
        style="@style/line_h" />

</LinearLayout>