<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commom_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_dimen_50"
    android:background="@drawable/shape_head_bg"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/base_dimen_14"
        android:paddingRight="@dimen/base_dimen_14"
        android:src="@mipmap/head_back_white" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/back_iv"
        android:textColor="@color/base_white"
        android:textSize="@dimen/base_text_size_18" />

    <ImageView
        android:id="@+id/store_manager_iv"
        android:layout_width="@dimen/base_dimen_44"
        android:layout_height="@dimen/base_dimen_44"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/base_dimen_24"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <TextView
        android:id="@+id/head_right_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/base_dimen_14"
        android:paddingRight="@dimen/sp_14"
        android:text="右边文字"
        android:textColor="@color/base_white"
        android:textSize="@dimen/base_text_size_14"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/head_right_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/base_dimen_14"
        android:paddingRight="@dimen/base_dimen_14"
        android:visibility="gone" />

    <View
        android:id="@+id/head_bottom_line"
        style="@style/line_h"
        android:layout_alignParentBottom="true" />
</RelativeLayout>