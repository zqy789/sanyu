<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_white"
    android:orientation="vertical"
    tools:context=".module.auth.activity.ModifyPsdActivity">

    <com.ybkj.syzs.deliver.ui.view.MyActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hideBottomLine="true" />

    <TextView
        style="@style/auth_text_login"
        android:layout_marginStart="@dimen/base_dimen_20"
        android:layout_marginTop="@dimen/base_dimen_25"
        android:text="@string/auth_modify_password" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:orientation="vertical">


        <EditText
            android:id="@+id/phone_code_et"
            style="@style/auth_login_edit_text_style"
            android:enabled="false"
            android:hint="@string/auth_input_phone"
            android:inputType="number"
            android:maxLength="11" />


        <TextView
            android:id="@+id/auth_register_code_btn"
            style="@style/auth_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="@dimen/base_dimen_20"
            android:gravity="center"
            android:text="@string/auth_phone_code" />

    </FrameLayout>

    <EditText
        android:id="@+id/auth_code_et"
        style="@style/auth_login_edit_text_style"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:hint="@string/auth_input_phone_code"
        android:inputType="number"
        android:maxLength="6" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:layout_marginRight="@dimen/base_dimen_20"
        android:background="@drawable/auth_shape_edit_bg_focus_dark">

        <EditText
            android:id="@+id/auth_old_password_et"
            style="@style/auth_login_edit_text_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:hint="@string/auth_input_old_password"
            android:inputType="textPassword"
            android:maxLength="16" />

        <ImageButton
            android:id="@+id/password_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingLeft="@dimen/base_dimen_15"
            android:src="@mipmap/ic_password_visible"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:layout_marginRight="@dimen/base_dimen_20"
        android:background="@drawable/auth_shape_edit_bg_focus_dark">

        <EditText
            android:id="@+id/auth_new_password_et"
            style="@style/auth_login_edit_text_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:hint="@string/auth_new_old_password"
            android:inputType="textPassword"
            android:maxLength="16" />

        <ImageButton
            android:id="@+id/new_password_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingLeft="@dimen/base_dimen_15"
            android:src="@mipmap/ic_password_visible"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:layout_marginRight="@dimen/base_dimen_20"
        android:background="@drawable/auth_shape_edit_bg_focus_dark">

        <EditText
            android:id="@+id/auth_new_password_re_et"
            style="@style/auth_login_edit_text_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:maxLength="16" />

        <ImageButton
            android:id="@+id/new_password_re_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingLeft="@dimen/base_dimen_15"
            android:src="@mipmap/ic_password_visible"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/auth_btn_finish"
        style="@style/auth_btn_login_shape"
        android:layout_marginTop="@dimen/base_dimen_30"
        android:text="@string/auth_btn_finish" />
</LinearLayout>