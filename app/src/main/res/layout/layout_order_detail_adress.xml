<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_white"
    android:paddingTop="@dimen/base_dimen_15"
    android:paddingBottom="@dimen/base_dimen_15">

    <LinearLayout
        android:id="@+id/lin_adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/project_base_white_angle8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/base_dimen_18"
                android:layout_height="@dimen/base_dimen_22"
                android:layout_marginRight="@dimen/base_dimen_8"
                android:src="@mipmap/ic_address_location" />

            <TextView
                android:id="@+id/tv_receiver_name"
                style="@style/auth_common_text3"
                android:textColor="@color/auth_color_666" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_address"
            style="@style/auth_common_text3"
            android:layout_marginTop="@dimen/base_text_size_12"
            android:textColor="@color/auth_color_666"
            android:textSize="@dimen/base_text_size_14" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_order_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_adress">

        <TextView
            android:id="@+id/tv_order_no"
            style="@style/auth_common_text3" />

        <TextView
            android:id="@+id/tv_status"
            style="@style/auth_common_text3"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/tv_order_number"
            style="@style/auth_common_text9_small"
            android:layout_alignTop="@+id/tv_order_no"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base_dimen_12"
            android:textSize="@dimen/base_text_size_14" />

        <TextView
            android:id="@+id/tv_add_time"
            style="@style/auth_common_text9_small"
            android:layout_below="@+id/tv_order_no"
            android:layout_marginTop="@dimen/base_dimen_6" />
    </RelativeLayout>


</RelativeLayout>