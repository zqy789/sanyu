<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.changeurl.ChangeUrlActivity">

    <include layout="@layout/common_header" />

    <TextView
        android:id="@+id/url_old_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:text="原始的url"
        android:textIsSelectable="true"
        android:textSize="@dimen/base_text_size_16" />

    <TextView
        android:id="@+id/url_now_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:text="现在的url"
        android:textSize="@dimen/base_text_size_16" />

    <EditText
        android:id="@+id/url_change_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:padding="@dimen/base_dimen_10"
        android:textSize="@dimen/base_text_size_16" />

    <Button
        android:id="@+id/url_change_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginTop="@dimen/base_dimen_5"
        android:text="确认更改" />

    <Button
        android:id="@+id/url_change_old_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginTop="@dimen/base_dimen_5"
        android:text="还原URL" />


</LinearLayout>