<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.ybkj.syzs.deliver.ui.view.RoundImageView
        android:id="@+id/shop_logo_iv"
        android:layout_width="@dimen/base_dimen_80"
        android:layout_height="@dimen/base_dimen_80"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/base_dimen_15"
        app:img_radius="@dimen/base_dimen_4" />


    <TextView
        android:id="@+id/shop_name_tv"
        style="@style/auth_common_text3"
        android:layout_marginTop="@dimen/base_dimen_2"
        android:layout_toRightOf="@id/shop_logo_iv" />


    <TextView
        android:id="@+id/text1"
        style="@style/auth_common_text3"
        android:layout_below="@id/shop_name_tv"
        android:layout_marginTop="@dimen/base_dimen_16"
        android:layout_toRightOf="@id/shop_logo_iv"
        android:text="防伪码:"
        android:textSize="@dimen/base_text_size_12" />

    <TextView
        android:id="@+id/code_tv"
        style="@style/auth_common_text3"
        android:layout_below="@id/shop_name_tv"
        android:layout_marginLeft="@dimen/base_dimen_2"
        android:layout_marginTop="@dimen/base_dimen_16"
        android:layout_toRightOf="@id/text1"
        android:textSize="@dimen/base_text_size_12" />


</RelativeLayout>
