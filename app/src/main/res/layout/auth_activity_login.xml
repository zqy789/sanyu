<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="@dimen/base_dimen_81"
            android:layout_height="@dimen/base_dimen_81"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_dimen_45"
            android:src="@mipmap/auth_version" />

        <TextView
            style="@style/auth_14_a4a"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_dimen_22"
            android:text="三域商贸"
            android:textColor="@color/auth_color_text_3"
            android:textSize="@dimen/base_text_size_18" />

        <TextView
            style="@style/auth_common_text9"
            android:layout_marginLeft="@dimen/base_dimen_24"
            android:layout_marginTop="@dimen/base_dimen_29"
            android:layout_marginBottom="@dimen/base_dimen_13"
            android:text="@string/auth_account" />

        <EditText
            android:id="@+id/auth_account_et"
            style="@style/auth_login_edit_text_style"
            android:hint="@string/auth_input_account" />

        <TextView
            style="@style/auth_common_text9"
            android:layout_marginLeft="@dimen/base_dimen_24"
            android:layout_marginTop="@dimen/base_dimen_25"
            android:layout_marginBottom="@dimen/base_dimen_13"
            android:text="@string/auth_password" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_24"
            android:layout_marginRight="@dimen/base_dimen_24"
            android:background="@drawable/auth_shape_edit_bg_focus_dark">

            <EditText
                android:id="@+id/auth_password_et"
                style="@style/auth_login_edit_text_style"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:hint="@string/auth_input_password"
                android:inputType="textPassword" />

            <ImageButton
                android:id="@+id/password_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingLeft="@dimen/base_dimen_15"
                android:src="@mipmap/ic_password_visible"
                android:visibility="gone" />
        </RelativeLayout>


        <TextView
            android:id="@+id/auth_forget_password_tv"
            style="@style/auth_12_999"
            android:layout_gravity="right"
            android:text="@string/auth_forget_password"
            android:textColor="@color/project_base_color_green"
            android:textSize="@dimen/base_text_size_13"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/auth_login_btn"
            style="@style/auth_btn_login_shape"
            android:text="@string/auth_login_text"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/auth_register_tv"
            style="@style/auth_register"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_dimen_30"
            android:text="@string/auth_register_account"
            android:visibility="gone" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/bg_login_cloud" />
</RelativeLayout>
