<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_angle8"
    android:orientation="vertical"
    android:paddingTop="@dimen/base_dimen_16">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_16"
        android:layout_marginRight="@dimen/base_dimen_16"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/auth_color_text_3"
        android:textSize="@dimen/base_text_size_18"
        android:visibility="visible" />

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_16"
        android:layout_marginTop="@dimen/base_dimen_30"
        android:layout_marginRight="@dimen/base_dimen_16"
        android:layout_marginBottom="@dimen/base_dimen_25"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/base_dimen_6"
        android:textColor="@color/auth_color_666"
        android:textSize="@dimen/base_text_size_14"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/button_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/base_dimen_15">

        <Button
            android:id="@+id/negative_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/base_dimen_44"
            android:layout_marginRight="@dimen/base_dimen_8"
            android:layout_weight="1"
            android:background="@drawable/project_base_shape_grey9_round"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_size_14" />

        <Button
            android:id="@+id/positive_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/base_dimen_44"
            android:layout_marginLeft="@dimen/base_dimen_8"
            android:layout_weight="1"
            android:background="@drawable/project_base_shape_green_round"
            android:text="确认"
            android:textColor="@color/base_white"
            android:textSize="@dimen/base_text_size_14" />

    </LinearLayout>

    <Button
        android:id="@+id/positive_half_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_30"
        android:layout_marginBottom="@dimen/base_dimen_0_5"
        android:text="确认"
        android:textColor="@color/project_base_color_green"
        android:textSize="@dimen/base_text_size_14"
        android:visibility="gone" />

</LinearLayout>