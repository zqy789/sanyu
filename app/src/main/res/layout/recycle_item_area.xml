<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_dimen_37"
    android:background="@color/base_white"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/base_dimen_24"
    android:paddingRight="@dimen/base_dimen_14">

    <TextView
        android:id="@+id/area_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/color_black_1"
        android:textSize="@dimen/base_text_size_14" />

    <TextView
        android:id="@+id/area_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/color_black_1"
        android:textSize="@dimen/base_text_size_14" />

</RelativeLayout>