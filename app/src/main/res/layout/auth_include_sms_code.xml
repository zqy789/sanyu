<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/auth_new_login_tip"
        android:layout_marginTop="@dimen/base_dimen_15"
        android:text="验证码"
        android:textColor="@color/auth_color_text_3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_9">

        <EditText
            android:id="@+id/auth_code_et"
            style="@style/auth_new_login_edit_e6f_text_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_38"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:maxLength="6" />

        <TextView
            android:id="@+id/auth_register_code_btn"
            style="@style/auth_14_952"
            android:layout_height="@dimen/base_dimen_35"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/base_white"
            android:gravity="center"
            android:text="获取验证码" />
    </RelativeLayout>
</LinearLayout>
