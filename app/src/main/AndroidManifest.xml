<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ybkj.syzs.deliver">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/whiteTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <meta-data
            android:name="design_width_in_dp"
            android:value="375" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="667" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <activity
            android:name="com.ybkj.syzs.deliver.module.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ybkj.syzs.deliver.module.auth.activity.LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ybkj.syzs.deliver.module.auth.activity.WelcomeActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- APK下载安装服务 -->
        <service android:name="com.ybkj.syzs.deliver.service.ApkDownInstallService" />
        <!-- 腾讯BUGLY必须要添加的activity -->
        <activity
            android:name="com.tencent.bugly.beta.ui.BetaActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale"
            android:theme="@android:style/Theme.Translucent" />


        <service android:name="com.ybkj.syzs.deliver.service.ApkDownInstallService" />

        <activity
            android:name="com.ybkj.syzs.deliver.module.changeurl.ChangeUrlActivity"
            android:launchMode="singleTask">

        </activity>
        <activity
            android:name=".module.auth.activity.ModifyPhoneActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".module.auth.activity.ModifyPsdActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".module.auth.activity.ResetPasswordActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".module.auth.activity.RetrieveActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".module.auth.activity.VerifyPhoneActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".module.auth.activity.VersionActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".module.order.activity.ScanSecurityActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".module.order.activity.GoodsPostActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".module.order.activity.OrderDetailActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".module.order.activity.OrderSearchActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".module.user.activity.UserInfoActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".module.order.activity.ScanCodeActivity"
            android:launchMode="singleTask" />
        <activity android:name=".module.user.activity.PictureChoseActivity" />
    </application>

</manifest>